{
  "name": "wishcare",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "prettier": "prettier --write \"{src,__{tests|mocks}__}/**/*.{js,jsx,ts,tsx}\"",
    "pre-commit": "yarn lint:fix && yarn prettier && yarn test",
    "bundle": "bundle install",
    "pod": "cd ios && bundle exec pod install && cd ..",
    "android:bundle:build": "cd android && ./gradlew clean && ./gradlew bundleRelease && cd ..",
    "android:apk:build": "cd android && ./gradlew clean && ./gradlew assembleRelease && cd ..",
    "androidDevelop": "export ENVFILE=.env.development && react-native run-android --mode=developmentDebug --appId=com.nk.wishcare.development",
    "androidProduct": "export ENVFILE=.env.production && react-native run-android --mode=productionDebug --appId=com.nk.wishcare",
    "androidApkDev": "rm -rf build && rm -rf android/build && export ENVFILE=.env.development && cd android && ./gradlew assembleDevelopmentRelease && cd ..",
    "androidApkPrd": "rm -rf build && rm -rf android/build && export ENVFILE=.env.production && cd android && ./gradlew clean && ./gradlew assembleProductionRelease && cd ..",
    "androidAabPrd": "rm -rf build && rm -rf android/build && export ENVFILE=.env.production && cd android && ./gradlew clean && ./gradlew bundleProductionRelease && cd ..",
    "openOutputApk": "open ./android/app/build/outputs/apk",
    "openOutputAab": "open ./android/app/build/outputs/bundle"
  },
  "dependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@react-native-community/datetimepicker": "^7.6.1",
    "@react-native-community/hooks": "^3.0.0",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/compat": "^5.3.20",
    "@react-navigation/drawer": "^6.6.6",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "axios": "^1.2.2",
    "lodash": "^4.17.21",
    "lottie-react-native": "^6.4.1",
    "moment": "^2.29.4",
    "moment-lunar": "^0.0.4",
    "react": "18.2.0",
    "react-native": "0.72.4",
    "react-native-config": "^1.5.1",
    "react-native-gesture-handler": "^2.13.1",
    "react-native-image-picker": "^7.0.3",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-mmkv": "^2.10.2",
    "react-native-modal-datetime-picker": "^17.1.0",
    "react-native-pager-view": "^6.2.3",
    "react-native-paper": "^5.11.1",
    "react-native-reanimated": "^3.5.4",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-screens": "^3.25.0",
    "react-native-tab-view": "^3.5.2",
    "react-native-vector-icons": "^10.0.2",
    "react-native-vision-camera": "^3.6.9",
    "react-redux": "7.2.1",
    "redux": "4.0.5",
    "redux-logger": "^3.0.6",
    "redux-persist": "6.0.0",
    "redux-saga": "1.1.3",
    "rn-qr-generator": "^1.3.1",
    "ts-get": "^1.0.5",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/lodash": "^4.14.191",
    "@types/react": "^18.0.24",
    "@types/react-native": "^0.70.8",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-redux": "7.1.9",
    "@types/react-test-renderer": "^18.0.0",
    "@types/redux-logger": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "babel-jest": "^29.2.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.19.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.2.1",
    "lint-staged": "^13.1.0",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  }
}
